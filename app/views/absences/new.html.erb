<div class="container">
  <div class="back-card p-3">
    <h1 class="text-center mt-4">Absence form</h1>
    <br>
    <br>
    <br>
    <div id="players" >
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Nickname</th>
            <th scope="col">Fullname</th>
            <th scope="col">cell Phone</th>
            <th scope="col">Position</th>
            <th scope="col">Medical Conditions</th>
            <th scope="col">Absent</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% if Player.any? %>


            <%= simple_form_for :absence, url: new_absence_path, method: :post do |f| %>
              <% @players.each do |player| %>
                <div id="<%= dom_id player %>">
                  <tr>
                    <% if player.nickname.present? %>
                      <td><%= player.nickname %></td>
                    <% else %>
                      <td> - </td>
                    <% end %>
                    <td><%= player.fullname %></td>
                    <td><%= player.cellphone_number %></td>
                    <td><%= player.player_position %></td>
                    <td><%= player.medical_conditions %></td>
                    <td><%= f.check_box :player_ids, { multiple: true }, player.id, nil %></td>
                  </tr>
                </div>
              <% end %>
            <% end %>

          <% else %>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
            <td class="text-center">-</td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>













<h1>New absence</h1>

<%= render "form", absence: @absence %>

<br>

<div>
  <%= link_to "Back to absences", absences_path %>
</div>
