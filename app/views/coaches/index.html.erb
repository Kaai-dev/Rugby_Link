<div class="container">

  <%= flash_messages %>

  <div class="mb-3 mb-sm-0">
          <h5 class="card-title fs-6">Create coaches that belong to the club.</h5>
          <h1 class="text-center mt-4"><u>Coaches</u></h1>
          <br>
          <%= link_to new_coach_path, class: "btn btn-success btn-sm mb-4" do %>
            <i class="bi bi-clipboard2-plus-fill"></i> &nbsp;Create Coach
          <% end %>
          <br>
          <br>
          <div id="coaches" >
            <table class="table table-hover">
              <thead>
                <tr >
                  <th scope="col"><p>Photo</p></th>
                  <th class="mobile-tables" scope="col"><p>Nickname</p></th>
                  <th scope="col"><p>Name</p></th>
                  <th scope="col"><p>Cell Phone</p></th>
                  <th class="mobile-tables" scope="col"><p>Medical Conditions</p></th>
                  <th class="mobile-tables" scope="col"><p>Medical Aid</p></th>
                </tr>
              </thead>
              <tbody class="table-group-divider">
                <% if Coach.any? %>
                  <% @coaches.each do |coach| %>
                    <div id="<%= dom_id coach %>">
                      <tr class="cursor-pointer" data-controller="clickable-table-row" data-value="<%= coach.id %>" data-action="click->clickable-table-row#clicked">
                      

                        <% if coach.coach_profile_pic.attached? %>
                          <td class="text-center"><%= coach_profile_pic_avatar_for(coach) %></td>
                        <% else %>
                          <td class="text-center"> - </td>
                        <% end %>

                        <% if coach.nickname.present? %>
                          <td class=" mobile-tables align-middle" ><%= coach.nickname %></td>
                        <% else %>
                          <td class=" mobile-tables align-middle" > - </td>
                        <% end %>

                        <td class="align-middle" ><%= coach.fullname %></td>

                        <td class="align-middle" ><%= coach.cellphone_number %></td>
                       
                        <td class="mobile-tables align-middle" ><%= coach.medical_conditions %></td>
                        
                        <td class="mobile-tables align-middle"><%= coach.medical_aid %></td>

                      </tr>
                    </div>
                  <% end %>
                <% else %>
                  <td class="text-center mobile-tables align-middle">-</td>
                  <td class="text-center mobile-tables align-middle">-</td>
                  <td class="text-center mobile-tables align-middle">-</td>
                  <td class="text-center mobile-tables align-middle">-</td>
                  <td class="text-center mobile-tables align-middle">-</td>
                  <td class="text-center mobile-tables align-middle">-</td>
                <% end %>
              </tbody>
            </table>
          </div>

    </div>
  </div>
<br>
