      <%= image_tag 'rugby-link-logo.png', class: "mb-4 mt-4" ,style: "max-height: 100px;" %>
    <% if action_name == 'index' %>
      <%= search_form_for @q, html: { class: "d-flex", role: "search" } do |f| %>
